{
  "name": "m3u-player",
  "version": "0.1.0",
  "description": "Universal media player with FFmpeg remuxing support for HLS, DASH, MP4, MKV, AVI, and MPEG-TS",
  "type": "module",
  "main": "./dist/m3u-player.umd.js",
  "module": "./dist/m3u-player.es.js",
  "exports": {
    ".": {
      "import": "./dist/m3u-player.es.js",
      "require": "./dist/m3u-player.umd.js"
    },
    "./style.css": "./dist/m3u-player.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "BUILD_MODE=lib vite build",
    "build:demo": "vite build",
    "build:all": "npm run build && npm run build:demo",
    "preview": "vite preview",
    "preview:demo": "vite preview --outDir dist-demo",
    "lint": "eslint ."
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shaka-player": "^4.16.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "keywords": [
    "video-player",
    "media-player",
    "hls",
    "dash",
    "ffmpeg",
    "remux",
    "shaka-player",
    "streaming",
    "mkv",
    "avi",
    "m3u8",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
